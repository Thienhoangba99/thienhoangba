                @Html.DisplayFor(modelItem => item.DateSubmit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountView)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdImages }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdImages }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdImages })
